<style>
  /* Custom toggle switch styles */
  #billing-toggle:checked + label .toggle-bg {
    @apply bg-primary-600;
  }
  
  #billing-toggle:checked + label .toggle-dot {
    transform: translateX(1.75rem);
  }
  
  .toggle-bg:hover {
    @apply bg-secondary-400;
  }
  
  #billing-toggle:checked + label .toggle-bg:hover {
    @apply bg-primary-700;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Elements
    const toggle = document.getElementById('billing-toggle') as HTMLInputElement;
    const starterPrice = document.getElementById('starter-price');
    const professionalPrice = document.getElementById('professional-price');
    const monthlyLabel = document.getElementById('monthly-label');
    const annualLabel = document.getElementById('annual-label');
    
    // Prices
    const prices = {
      monthly: { starter: 29, professional: 99 },
      annual: { starter: 23, professional: 79 }
    };
    
    // Update function
    function updatePricing() {
      const isAnnual = toggle.checked;
      const currentPrices = isAnnual ? prices.annual : prices.monthly;
      
      // Update prices
      if (starterPrice) {
        starterPrice.textContent = `$${currentPrices.starter}`;
      }
      if (professionalPrice) {
        professionalPrice.textContent = `$${currentPrices.professional}`;
      }
      
      // Update labels
      if (monthlyLabel && annualLabel) {
        if (isAnnual) {
          monthlyLabel.className = 'text-sm font-medium mr-4 transition-colors duration-200 text-secondary-500';
          annualLabel.className = 'text-sm font-medium ml-4 transition-colors duration-200 text-primary-600 font-semibold';
        } else {
          monthlyLabel.className = 'text-sm font-medium mr-4 transition-colors duration-200 text-primary-600 font-semibold';
          annualLabel.className = 'text-sm font-medium ml-4 transition-colors duration-200 text-secondary-500';
        }
      }
    }
    
    // Initialize
    toggle.checked = false;
    updatePricing();
    
    // Event listener
    toggle.addEventListener('change', updatePricing);
    
    // Also listen for clicks on labels for better UX
    monthlyLabel?.addEventListener('click', () => {
      toggle.checked = false;
      updatePricing();
    });
    
    annualLabel?.addEventListener('click', () => {
      toggle.checked = true;
      updatePricing();
    });
  });
</script>