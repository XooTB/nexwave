---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Button from '@/components/Button.astro';
import FeatureCard from '@/components/FeatureCard.astro';
import '@/styles/global.css';
import { Bot, Palette, Zap, BarChart3, RotateCcw, Target, Check, Lock, Shield, Key, BarChart, AlertTriangle, Rocket, Radio, Wrench, BookOpen, Search, TrendingUp, Slack, Github, Mail, Database, Cloud, MessageSquare, Calendar, FileText, ShoppingCart, CreditCard, Users, Settings, Smartphone, Globe, Zap as ZapIcon, Link } from 'lucide-astro';
---

<BaseLayout title="Features - NexWave AI Automation Platform" description="Discover all the powerful features that make NexWave the leading AI automation platform for modern businesses.">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative pt-24 pb-20 bg-gradient-to-br from-primary-50 via-white to-accent-50">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl sm:text-6xl font-display font-bold text-secondary-900 mb-6 animate-on-scroll">
          Powerful Features for
          <span class="text-gradient">Every Business Need</span>
        </h1>
        <p class="text-xl text-secondary-600 mb-8 max-w-2xl mx-auto leading-relaxed animate-on-scroll">
          Explore the comprehensive suite of tools designed to automate, optimize, and scale your business operations with intelligent precision.
        </p>
        <Button variant="primary" size="lg" href="/signup" class="animate-on-scroll">
          Start Free Trial
        </Button>
      </div>
    </div>
  </section>

  <!-- Core Features -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-display font-bold text-secondary-900 mb-4 animate-on-scroll">
          Core Automation Features
        </h2>
        <p class="text-xl text-secondary-600 max-w-2xl mx-auto animate-on-scroll">
          The foundation of intelligent business automation
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <FeatureCard
          icon={Bot}
          title="AI-Powered Workflows"
          description="Create intelligent workflows that adapt and learn from your business patterns, making smarter decisions over time."
        />
        <FeatureCard
          icon={Palette}
          title="Visual Workflow Builder"
          description="Design complex automation with our intuitive drag-and-drop interface. No coding knowledge required."
        />
        <FeatureCard
          icon={Zap}
          title="Real-time Processing"
          description="Process data and trigger actions instantly with our high-performance automation engine."
        />
        <FeatureCard
          icon={BarChart3}
          title="Advanced Analytics"
          description="Get deep insights into your automation performance with comprehensive reporting and analytics."
        />
        <FeatureCard
          icon={RotateCcw}
          title="Smart Triggers"
          description="Set up intelligent triggers based on events, schedules, data changes, or external API calls."
        />
        <FeatureCard
          icon={Target}
          title="Error Handling"
          description="Robust error handling and recovery mechanisms ensure your workflows run smoothly 24/7."
        />
      </div>
    </div>
  </section>

  <!-- Integration Features -->
  <section class="section-padding bg-secondary-50">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="animate-on-scroll">
          <h2 class="text-4xl font-display font-bold text-secondary-900 mb-6">
            Seamless Integrations
          </h2>
          <p class="text-xl text-secondary-600 mb-8 leading-relaxed">
            Connect with over 500 popular tools and services. Our robust API and pre-built integrations make it easy to sync data across your entire tech stack.
          </p>
          
          <div class="space-y-4 mb-8">
            <div class="flex items-center space-x-3">
              <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                <Check class="w-4 h-4 text-white" />
              </div>
              <span class="text-secondary-700">CRM platforms (Salesforce, HubSpot, Pipedrive)</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                <Check class="w-4 h-4 text-white" />
              </div>
              <span class="text-secondary-700">Communication tools (Slack, Teams, Discord)</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                <Check class="w-4 h-4 text-white" />
              </div>
              <span class="text-secondary-700">Cloud storage (Google Drive, Dropbox, OneDrive)</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center">
                <Check class="w-4 h-4 text-white" />
              </div>
              <span class="text-secondary-700">E-commerce platforms (Shopify, WooCommerce)</span>
            </div>
          </div>
          
          <Button variant="primary" href="/integrations">
            View All Integrations
          </Button>
        </div>
        
        <div class="animate-on-scroll">
          <div class="grid grid-cols-4 gap-4">
            <!-- Row 1 -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Slack class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Github class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Mail class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Database class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            
            <!-- Row 2 -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Cloud class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <MessageSquare class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Calendar class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <FileText class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            
            <!-- Row 3 -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <ShoppingCart class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <CreditCard class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Users class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Settings class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            
            <!-- Row 4 -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Smartphone class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Globe class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <ZapIcon class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
            <div class="bg-white rounded-lg p-4 shadow-sm border border-secondary-200 flex items-center justify-center h-16 hover:shadow-md transition-shadow group">
              <Link class="w-8 h-8 text-secondary-600 group-hover:text-primary-600 transition-colors" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Security Features -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="animate-on-scroll">
          <div class="bg-gradient-to-br from-primary-500 to-accent-500 rounded-2xl p-8 text-white">
            <div class="mb-8">
              <div class="w-16 h-16 bg-white/20 rounded-lg flex items-center justify-center mb-4">
                <Lock class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-2xl font-bold mb-2">Bank-Grade Security</h3>
              <p class="text-primary-100">Your data is protected with enterprise-level security measures.</p>
            </div>
            
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div class="bg-white/10 rounded-lg p-3">
                <div class="font-semibold mb-1">SOC 2 Type II</div>
                <div class="text-primary-200">Certified</div>
              </div>
              <div class="bg-white/10 rounded-lg p-3">
                <div class="font-semibold mb-1">256-bit AES</div>
                <div class="text-primary-200">Encryption</div>
              </div>
              <div class="bg-white/10 rounded-lg p-3">
                <div class="font-semibold mb-1">GDPR</div>
                <div class="text-primary-200">Compliant</div>
              </div>
              <div class="bg-white/10 rounded-lg p-3">
                <div class="font-semibold mb-1">ISO 27001</div>
                <div class="text-primary-200">Certified</div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="animate-on-scroll">
          <h2 class="text-4xl font-display font-bold text-secondary-900 mb-6">
            Enterprise-Grade Security
          </h2>
          <p class="text-xl text-secondary-600 mb-8 leading-relaxed">
            Protect your sensitive data with our comprehensive security framework designed for the most demanding enterprise requirements.
          </p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="card p-6">
              <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-500 rounded-lg flex items-center justify-center mb-4">
                <Shield class="w-5 h-5 text-white" />
              </div>
              <h3 class="font-semibold text-secondary-900 mb-2">Data Protection</h3>
              <p class="text-secondary-600 text-sm">End-to-end encryption for data in transit and at rest.</p>
            </div>
            
            <div class="card p-6">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center mb-4">
                <Key class="w-5 h-5 text-white" />
              </div>
              <h3 class="font-semibold text-secondary-900 mb-2">Access Control</h3>
              <p class="text-secondary-600 text-sm">Role-based permissions and SSO integration.</p>
            </div>
            
            <div class="card p-6">
              <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mb-4">
                <BarChart class="w-5 h-5 text-white" />
              </div>
              <h3 class="font-semibold text-secondary-900 mb-2">Audit Logs</h3>
              <p class="text-secondary-600 text-sm">Comprehensive activity tracking and monitoring.</p>
            </div>
            
            <div class="card p-6">
              <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-rose-500 rounded-lg flex items-center justify-center mb-4">
                <AlertTriangle class="w-5 h-5 text-white" />
              </div>
              <h3 class="font-semibold text-secondary-900 mb-2">Threat Detection</h3>
              <p class="text-secondary-600 text-sm">AI-powered anomaly detection and alerting.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Developer Features -->
  <section class="section-padding bg-secondary-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-display font-bold text-secondary-900 mb-4 animate-on-scroll">
          Built for Developers
        </h2>
        <p class="text-xl text-secondary-600 max-w-2xl mx-auto animate-on-scroll">
          Powerful APIs and tools for custom integrations and advanced use cases
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <FeatureCard
          icon={Rocket}
          title="RESTful API"
          description="Comprehensive REST API with detailed documentation, SDKs, and code examples for seamless integration."
        />
        <FeatureCard
          icon={Radio}
          title="Webhooks"
          description="Real-time event notifications to keep your systems synchronized with workflow executions."
        />
        <FeatureCard
          icon={Wrench}
          title="Custom Functions"
          description="Write custom JavaScript functions to extend automation capabilities beyond standard actions."
        />
        <FeatureCard
          icon={BookOpen}
          title="SDK Libraries"
          description="Official SDKs for popular programming languages including Python, Node.js, and Go."
        />
        <FeatureCard
          icon={Search}
          title="Testing Tools"
          description="Built-in testing and debugging tools to validate workflows before deployment."
        />
        <FeatureCard
          icon={TrendingUp}
          title="API Analytics"
          description="Monitor API usage, performance metrics, and integration health with detailed dashboards."
        />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-gradient-to-r from-primary-600 to-accent-600">
    <div class="container-custom text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-4xl font-display font-bold text-white mb-6 animate-on-scroll">
          Ready to Experience These Features?
        </h2>
        <p class="text-xl text-primary-100 mb-8 animate-on-scroll">
          Start your free trial today and see how NexWave can transform your business operations.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-on-scroll">
          <Button variant="secondary" size="lg" href="/signup">
            Start Free Trial
          </Button>
          <Button variant="ghost" size="lg" href="/pricing" class="text-white hover:bg-white/10">
            View Pricing
          </Button>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>