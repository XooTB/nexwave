---
export interface Props {
  icon: any;
  title: string;
  description: string;
}

const { icon: Icon, title, description } = Astro.props;
---

<div class="card p-6 h-full animate-on-scroll group hover:shadow-lg transition-all duration-300">
  <div class="flex items-center space-x-3 mb-4">
    <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent-500 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
      <Icon class="w-5 h-5 text-white" />
    </div>
    <h3 class="text-xl font-semibold text-secondary-900">{title}</h3>
  </div>
  <p class="text-secondary-600 leading-relaxed">{description}</p>
</div>