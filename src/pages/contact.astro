---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Button from '@/components/Button.astro';
import '@/styles/global.css';
---

<BaseLayout title="Contact Us - NexWave AI Automation Platform" description="Get in touch with our team. We're here to help you transform your business with intelligent automation.">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative pt-24 pb-20 bg-gradient-to-br from-primary-50 via-white to-accent-50">
    <div class="container-custom">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl sm:text-6xl font-display font-bold text-secondary-900 mb-6 animate-on-scroll">
          Get in <span class="text-gradient">Touch</span>
        </h1>
        <p class="text-xl text-secondary-600 mb-8 max-w-2xl mx-auto leading-relaxed animate-on-scroll">
          Have questions about NexWave? Want to see a demo? Our team is here to help you succeed with automation.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div class="animate-on-scroll">
          <div class="card p-8">
            <h2 class="text-3xl font-display font-bold text-secondary-900 mb-6">
              Send us a message
            </h2>
            <p class="text-secondary-600 mb-8 leading-relaxed">
              Fill out the form below and we'll get back to you within 24 hours. For urgent matters, please call us directly.
            </p>
            
            <form class="space-y-6" id="contact-form">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-secondary-700 mb-2">
                    First Name *
                  </label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName" 
                    required
                    class="w-full px-4 py-3 rounded-lg border border-secondary-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                    placeholder="John"
                  >
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-secondary-700 mb-2">
                    Last Name *
                  </label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName" 
                    required
                    class="w-full px-4 py-3 rounded-lg border border-secondary-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                    placeholder="Doe"
                  >
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-secondary-700 mb-2">
                  Work Email *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-secondary-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                  placeholder="john@company.com"
                >
              </div>
              
              <div>
                <label for="company" class="block text-sm font-medium text-secondary-700 mb-2">
                  Company
                </label>
                <input 
                  type="text" 
                  id="company" 
                  name="company"
                  class="w-full px-4 py-3 rounded-lg border border-secondary-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                  placeholder="Company Name"
                >
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-secondary-700 mb-2">
                  Subject *
                </label>
                <select 
                  id="subject" 
                  name="subject" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-secondary-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors"
                >
                  <option value="">Select a subject</option>
                  <option value="demo">Request a Demo</option>
                  <option value="sales">Sales Inquiry</option>
                  <option value="support">Technical Support</option>
                  <option value="partnership">Partnership</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-secondary-700 mb-2">
                  Message *
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="5" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-secondary-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors resize-none"
                  placeholder="Tell us more about your needs..."
                ></textarea>
              </div>
              
              <div class="flex items-start">
                <input 
                  type="checkbox" 
                  id="consent" 
                  name="consent" 
                  required
                  class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-secondary-300 rounded"
                >
                <label for="consent" class="ml-3 text-sm text-secondary-600 leading-relaxed">
                  I agree to receive communications from NexWave and understand that I can unsubscribe at any time. View our 
                  <a href="#" class="text-primary-600 hover:text-primary-700 underline">Privacy Policy</a>.
                </label>
              </div>
              
              <Button variant="primary" class="w-full" type="submit">
                Send Message
              </Button>
            </form>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="animate-on-scroll">
          <div class="space-y-8">
            <!-- Contact Details -->
            <div class="card p-8">
              <h3 class="text-2xl font-bold text-secondary-900 mb-6">
                Contact Information
              </h3>
              
              <div class="space-y-6">
                <div class="flex items-start">
                  <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent-500 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-secondary-900 mb-1">Email</h4>
                    <p class="text-secondary-600">hello@nexwave.com</p>
                    <p class="text-secondary-600">support@nexwave.com</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-500 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-secondary-900 mb-1">Phone</h4>
                    <p class="text-secondary-600">+1 (555) 123-4567</p>
                    <p class="text-sm text-secondary-500">Mon-Fri, 9AM-6PM PST</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-secondary-900 mb-1">Office</h4>
                    <p class="text-secondary-600">123 Innovation Drive<br>San Francisco, CA 94107<br>United States</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Response Times -->
            <div class="card p-8">
              <h3 class="text-2xl font-bold text-secondary-900 mb-6">
                Response Times
              </h3>
              
              <div class="space-y-4">
                <div class="flex items-center justify-between py-3 border-b border-secondary-200">
                  <span class="font-medium text-secondary-900">Sales Inquiries</span>
                  <span class="text-green-600 font-semibold">&lt; 2 hours</span>
                </div>
                <div class="flex items-center justify-between py-3 border-b border-secondary-200">
                  <span class="font-medium text-secondary-900">Technical Support</span>
                  <span class="text-blue-600 font-semibold">&lt; 4 hours</span>
                </div>
                <div class="flex items-center justify-between py-3 border-b border-secondary-200">
                  <span class="font-medium text-secondary-900">General Inquiries</span>
                  <span class="text-accent-600 font-semibold">&lt; 24 hours</span>
                </div>
                <div class="flex items-center justify-between py-3">
                  <span class="font-medium text-secondary-900">Partnership</span>
                  <span class="text-purple-600 font-semibold">&lt; 48 hours</span>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div class="card p-8">
              <h3 class="text-2xl font-bold text-secondary-900 mb-6">
                Follow Us
              </h3>
              
              <div class="flex space-x-4">
                <a href="#" class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center text-white hover:scale-110 transition-transform duration-200">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </a>
                
                <a href="#" class="w-12 h-12 bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg flex items-center justify-center text-white hover:scale-110 transition-transform duration-200">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                  </svg>
                </a>
                
                <a href="#" class="w-12 h-12 bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg flex items-center justify-center text-white hover:scale-110 transition-transform duration-200">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-secondary-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-display font-bold text-secondary-900 mb-4 animate-on-scroll">
          Quick Answers
        </h2>
        <p class="text-xl text-secondary-600 animate-on-scroll">
          Common questions we receive from customers
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="card p-6 animate-on-scroll">
            <h3 class="text-lg font-semibold text-secondary-900 mb-3">
              How quickly can we get started?
            </h3>
            <p class="text-secondary-600 leading-relaxed">
              You can sign up and start automating workflows within minutes. Our onboarding process typically takes less than 30 minutes.
            </p>
          </div>
          
          <div class="card p-6 animate-on-scroll">
            <h3 class="text-lg font-semibold text-secondary-900 mb-3">
              Do you offer training and support?
            </h3>
            <p class="text-secondary-600 leading-relaxed">
              Yes! We provide comprehensive documentation, video tutorials, and 24/7 support. Enterprise customers get dedicated training sessions.
            </p>
          </div>
          
          <div class="card p-6 animate-on-scroll">
            <h3 class="text-lg font-semibold text-secondary-900 mb-3">
              Can NexWave integrate with our existing tools?
            </h3>
            <p class="text-secondary-600 leading-relaxed">
              We support 500+ integrations including all major business tools. If you need a custom integration, our team can help build it.
            </p>
          </div>
          
          <div class="card p-6 animate-on-scroll">
            <h3 class="text-lg font-semibold text-secondary-900 mb-3">
              What about security and compliance?
            </h3>
            <p class="text-secondary-600 leading-relaxed">
              We're SOC 2 Type II compliant with enterprise-grade security. All data is encrypted at rest and in transit with regular security audits.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-gradient-to-r from-primary-600 to-accent-600">
    <div class="container-custom text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-4xl font-display font-bold text-white mb-6 animate-on-scroll">
          Ready to Transform Your Business?
        </h2>
        <p class="text-xl text-primary-100 mb-8 animate-on-scroll">
          Don't wait to start automating. Join thousands of companies already using NexWave to streamline their operations.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-on-scroll">
          <Button variant="secondary" size="lg" href="/signup">
            Start Free Trial
          </Button>
          <Button variant="ghost" size="lg" href="/pricing" class="text-white hover:bg-white/10">
            View Pricing
          </Button>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<script>
  // Form submission handling
  const form = document.getElementById('contact-form') as HTMLFormElement;
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form);
    
    // Simulate form submission
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;
    
    submitButton.textContent = 'Sending...';
    submitButton.disabled = true;
    
    // Simulate API call
    setTimeout(() => {
      alert('Thank you for your message! We\'ll get back to you within 24 hours.');
      form.reset();
      submitButton.textContent = originalText;
      submitButton.disabled = false;
    }, 2000);
  });
</script>